<style>
    .login-box {
  width: 400px;
  margin: 100px auto;
  padding:30px;
  background: #fafafa;
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f5f5f5', endColorstr='#f5f5f5',GradientType=0 );
  color: #000;
  overflow: hidden;
  -webkit-box-shadow: 0px 0px 0px 5px rgba(0,0,0,0.15);
  -moz-box-shadow: 0px 0px 0px 5px rgba(0,0,0,0.15);
  box-shadow: 0px 0px 0px 5px rgba(0,0,0,0.15);
}

.login-box input {
  margin-bottom: 10px;
}
</style>
<div class="row">
    <div class="login-box">
        <div class="icons">
        </div>
        <h2>
            Login to your account
        </h2>
        <form action="/auth" class="form-horizontal" enctype="application/x-www-form-urlencoded" method="POST">
            <fieldset>
                <div class="input-prepend" title="Username">
                    <span class="add-on">
                        <i class="halflings-icon user">
                        </i>
                    </span>
                    <input class="form-control" id="username" name="username" placeholder="type username" required="" type="text"/>
                </div>
                <div class="clearfix">
                </div>
                <div class="input-prepend" title="Password">
                    <span class="add-on">
                        <i class="halflings-icon lock">
                        </i>
                    </span>
                    <input class="form-control" id="password" name="password" placeholder="type password" required="" type="password"/>
                </div>
                <div class="clearfix">
                </div>
                <div class="button-login">
                    <button class="btn btn-primary" type="submit">
                        Login
                    </button>
                </div>
                <div class="clearfix">
                </div>
            </fieldset>
        </form>
    </div>
    <!--/span-->
</div>
<!--/.fluid-container-->
